{
    "database":
    {
        "host":
        {
            "type": "string",
            "description": "The hostname of the database server",
            "default": "localhost",
            "required": true
        },
        "database":
        {
            "type": "string",
            "description": "The name of the database",
            "default": "",
            "required": true
        },
        "username":
        {
            "type": "string",
            "description": "The username to use when connecting to the database",
            "default": "",
            "required": true
        },
        "password":
        {
            "type": "string",
            "description": "The password to use when connecting to the database",
            "default": "",
            "required": true
        }
    },
    "site":
    {
        "path":
        {
            "type": "string",
            "description": "The path to the site",
            "default": "/",
            "required": false
        },
        "name":
        {
            "type": "string",
            "description": "The name of the site",
            "default": "Web File Manager",
            "required": false
        },
        "theme":
        {
            "accent":
            {
                "type": "string",
                "description": "The accent color of the site",
                "default": "#ff7700",
                "required": false
            }
        }
    },
    "ffmpeg":
    {
        "binaries":
        {
            "ffmpeg":
            {
                "type": "string",
                "description": "The path to the ffmpeg binary",
                "default": "/usr/bin/ffmpeg",
                "required": false
            },
            "ffprobe":
            {
                "type": "string",
                "description": "The path to the ffprobe binary",
                "default": "/usr/bin/ffprobe",
                "required": false
            }
        },
        "options":
        {
            "thumbnail":
            {
                "width":
                {
                    "type": "integer",
                    "description": "The width of the thumbnail for videos",
                    "default": 852,
                    "required": false
                },
                "height":
                {
                    "type": "integer",
                    "description": "The height of the thumbnail for videos",
                    "default": 480,
                    "required": false
                }
            }
        }
    },
    "gapi":
    {
        "client_id":
        {
            "type": "string",
            "description": "The client ID for the Google API",
            "default": "",
            "required": false
        }
    },
    "log":
    {
        "path":
        {
            "type": "string",
            "description": "The path to the log file",
            "default": "/var/log/webfilemanager.log",
            "required": false
        },
        "level":
        {
            "type": "integer",
            "description": "The level of logging to use",
            "default": 3,
            "required": false
        }
    }
}